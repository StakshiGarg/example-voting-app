pipeline{
    agent any 
    tools {
        nodejs "NodeJs 8.9.0"
    }
    stages{
        stage("build"){
            when {
                changeset "result/**"
            }
            steps{
                echo "Building result"
                dir ("result") {
                    sh 'npm install'

                }
            }
        }
        stage("test"){
            when {
                changeset "result/**"
            }
            steps{
                echo "Testing result"
                dir ("result") {
                    sh 'npm test'

                }
            }
        }
    }
    
    post{
        always{
            echo "This pipeline run is completed.."
        }
    }
}